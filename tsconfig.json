{
	"compilerOptions": {
		"outDir": "dist",
		"allowJs": false,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"rootDir": "src",
		"target": "es6",
		"module": "commonjs",
		"lib": [
			"es6",
			"es2015",
			"dom"
		],
		"typeRoots": [
			"./types",
			"./node_modules/@types"
		],
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": [
		"./src/"
	]
}